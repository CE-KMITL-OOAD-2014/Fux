<script>
	function login(){
		if((document.getElementById("Username").value != "") && (document.getElementById("Password").value != "")){
			alert( "Wellcome to werewolf game" );
			$.post( "WEREWOLFGAME/service/member/login", { username: document.getElementById("Username").value, pass: document.getElementById("Password").value }).done(function( data ) {
 		 		var obj = JSON.parse(data);

 		 		if (obj.isFouldID == true && obj.isTruePassword == true) {
 		 			alert( "Wellcome to werewolf game" );
 		 			window.location = obj.url;

 		 		} else{
 		 			alert("Invalid username or password. Please re-enter your Username and Password");
 		 			$("#login_form").attr("action","home.html");
 		 		}
  				
			});

		}
		else{
			alert("Invalid username or password. Please re-enter your Username and Password");
			$("#login_form").attr("action","home.html");
		}
		
	}

	function create(){
		if((document.getElementById("inputUsername").value != "") && (document.getElementById("inputPassword").value != "")){
			$.post( " http://localhost:8080/WEREWOLFGAME/service/member/login ", { username: document.getElementById("inputUsername").value, pass: document.getElementById("inputPassword").value }).done(function( data ) {
 		 		var obj = JSON.parse(data);

 		 		if (obj.isFouldID == true && obj.isTruePassword == true) {
 		 			alert( "Wellcome to werewolf game" );
 		 			$("#login_form").attr("action", "obj.url");

 		 		} else{
 		 			alert("Please re-enter your new Username ");
 		 			$("#login_form").attr("action","home.html");
 		 		}
  				
			});

		}
		else{
			alert("Invalid username or password. Please re-enter your Username and Password");
			$("#login_create").attr("action","lobby.html");
		}

	}


	</script>

